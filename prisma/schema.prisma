generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  level     Int
  levelId   Int @id
  lastLevel Int
}

model Level {
  levelId   Int    @id @default(autoincrement())
  chapterId Int
  type      String
  name      String
  text      String
  sound     String
  answer    String
  correct   String
  option1   String
  option2   String
  option3   String
}

model Chapter {
  chapterId   Int    @id @default(autoincrement())
  description String
}
